{
  "include": ["vue-shims.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": ".",
    "sourceMap": false,
    "noEmit": true,

    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,

    "noUnusedLocals": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"]
  }
}
